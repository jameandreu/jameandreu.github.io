{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "A simple portfolio",
	"scripts": {
		"parcel": "npx parcel index.html",
		"netlify-parcel-build": "rm -rf dist/ && PARCEL_WORKERS=0 parcel build index.html --no-source-maps --log-level verbose",
		"serve": "serve dist",
		"compile:sass": "npx sass sass/main.scss css/styles.css -w",
		"gh-predeploy": "rm -rf dist && parcel build ./*.html --public-url ./",
		"gh-deploy": "gh-pages -d dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jameandreu/portfolio.git"
	},
	"author": "Andrew Ubag",
	"license": "ISC",
	"homepage": "https://github.com/jameandreu/portfolio#readme",
	"devDependencies": {
		"@parcel/transformer-sass": "~2.6.0",
		"gh-pages": "^4.0.0",
		"parcel": "~2.6.0",
		"sass": "~1.51.0",
		"serve": "~13.0.2"
	},
	"dependencies": {
		"swiper": "~8.1.6"
	}
}
